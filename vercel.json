{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": "api/**,*.py,requirements*.txt,config.py"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 60,
      "memory": 3008
    }
  },
  "ignore": [
    "chroma_db/**",
    "uploads/**",
    "*.db",
    "*.sqlite",
    "*.sqlite3",
    "__pycache__/**",
    "*.pyc",
    "*.pyo",
    ".git/**"
  ]
}
