{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "250mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "ignore": [
    "chroma_db/**",
    "uploads/**",
    "*.db",
    "*.sqlite",
    "*.sqlite3",
    "__pycache__/**",
    "*.pyc",
    ".git/**",
    "*.md",
    "!README.md",
    "requirements.txt"
  ]
}
